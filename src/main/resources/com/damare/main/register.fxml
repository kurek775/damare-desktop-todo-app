<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>

<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.damare.main.registerController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <children>
        <Label text="uname"></Label>
        <TextField fx:id="nameField"/>
        <Label text="email"></Label>
        <TextField fx:id="emailField"/>
        <Label text="password"></Label>
        <TextField fx:id="passwordField"/>
        <Button fx:id="registerBtn" text="Register" onAction="#onRegisterButtonClick"/>
        <Button fx:id="loginBtn" text="Login" onAction="#toLogin"/>


    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>


</VBox>
